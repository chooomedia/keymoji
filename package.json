{
    "name": "start",
    "version": "0.0.1",
    "description": "A way to start web applications",
    "private": true,
    "license": "MIT",
    "author": "@davi-mbatista",
    "scripts": {
        "start": "NODE_ENV=development webpack serve --config webpack/start.js",
        "build": "node scripts/update-timestamp.js && NODE_ENV=production webpack --config webpack/build.js && node scripts/optimize-build.js"
    },
    "devDependencies": {
        "@babel/cli": "^7.12.1",
        "@babel/core": "^7.14.3",
        "@babel/preset-env": "^7.14.2",
        "autoprefixer": "^10.4.20",
        "babel-loader": "^8.2.2",
        "clean-webpack-plugin": "^3.0.0",
        "copy-webpack-plugin": "^11.0.0",
        "css-loader": "^5.2.7",
        "css-minimizer-webpack-plugin": "^7.0.0",
        "cssnano": "^7.0.6",
        "file-loader": "^6.2.0",
        "html-webpack-plugin": "5.3.1",
        "mini-css-extract-plugin": "^1.6.2",
        "postcss": "^8.4.47",
        "postcss-loader": "^5.3.0",
        "style-loader": "^2.0.0",
        "svelte-loader": "^3.2.4",
        "svelte-preprocess": "^4.7.3",
        "svelte-routing": "^2.7.0",
        "tailwindcss": "^2.2.19",
        "terser-webpack-plugin": "^5.3.10",
        "webpack": "^5.88.2",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^4.15.1",
        "webpack-merge": "5.7.3"
    },
    "dependencies": {
        "dotenv": "^16.3.1",
        "svelte": "^3.59.2"
    },
    "babel": {
        "presets": [
            "@babel/preset-env"
        ]
    },
    "browserslist": [
        "last 3 chrome version",
        "last 3 firefox version",
        "last 3 safari version",
        "last 3 ios_saf version"
    ],
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "none",
        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "arrowParens": "avoid"
    }
}